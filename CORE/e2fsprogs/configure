             --bindir=$PREFIX/bin     	\
             --sbindir=$PREFIX/bin     	\
             --libdir=$PREFIX/lib      	\
             --datarootdir=$DATAROOTDIR \
             --sysconfdir=$PREFIX/etc  	\
             --with-root-prefix=""   	\
             --enable-elf-shlibs     	\
	     --disable-nls	    	\
             --disable-libblkid     	\
             --disable-libuuid       	\
             --disable-uuidd        

