

./configure   					\
            --prefix=$PREFIX      		\
            --libdir=$PREFIX/lib  		\
            --sbindir=$PREFIX/bin 		\
            --sysconfdir=$PREFIX/etc 		\
            --datarootdir=$DATAROOTDIR 		\
            --with-python=$PYTHON3	 	\
            --disable-static     		\
            --disable-nls        		\
            --disable-selinux    		\
            --with-pcre=system  

