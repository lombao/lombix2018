sed -i '/LIBTOOL_INSTALL/d' c++/Makefile.in || exit 1

./configure --prefix=$PREFIX           				\
            --datarootdir=$DATAROOTDIR 				\
            --mandir=$DATAROOTDIR/man 				\
            --with-shared           				\
            --without-debug         				\
            --disable-nls           				\
            --without-normal        				\
            --with-pkg-config-libdir=$DATAROOTDIR/pkgconfig 	\
            --enable-pc-files       				\
            --enable-widec
