./configure --prefix=$PREFIX  			\
      	    --with-zlib=/usr/pkgs/zlib		\
	    --with-ssl=/usr/pkgs/openssl	\
	    --with-gnutls=/usr/pkgs/gnutls	\
            --disable-static  			\
            --enable-threaded-resolver 		\
	    --enable-pthreads			\
	    --enable-cookies			\
  	    --enable-crypto-auth		\
	    --enable-imap			\
	    --enable-pop3			\
	    --enable-ftp			\
	    --enable-telnet			\
	    --enable-smtp			\
	    --with-random=/dev/urandom		\
            --with-ca-bundle=$LMBX_CA_CERT	

