./configure --prefix=$PREFIX 			\
            --localstatedir=/var     		\
            --datarootdir=$DATAROOTDIR 		\
            --disable-doxygen-docs   		\
            --disable-xml-docs      		\
            --disable-static         		\
            --disable-systemd        		\
            --without-systemdsystemunitdir 	\
            --with-console-auth-dir=/run/console 

