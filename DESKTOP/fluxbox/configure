export LDFLAGS="-L/usr/pkgs/imlib2/lib -L/usr/pkgs/fribidi/lib -L/usr/pkgs/X11/lib   "
export CFLAGS="-I/usr/pkgs/X11/include -I/usr/pkgs/fribidi/include -I/usr/pkgs/imlib2/include "
export CXXFLAGS=$CFLAGS

autoreconf -i || exit 1
./configure --prefix=$PREFIX 					\
            --datarootdir=$DATAROOTDIR 				\
            --datadir=$DATAROOTDIR 				\
            --with-menu=$DATAROOTDIR/fluxbox/menu 		\
            --with-windowmenu=$DATAROOTDIR/fluxbox/windowmenu 	\
            --with-style=$DATAROOTDIR/fluxbox/styles/bloe     	\
            --with-keys=$DATAROOTDIR/fluxbox/keys 		\
            --with-apps=$DATAROOTDIR/fluxbox/apps 		\
            --with-overlay=$DATAROOTDIR/fluxbox/overlay 	\
            --with-init=$DATAROOTDIR/fluxbox/init 		\
            --disable-nls    					\
            --disable-slit   					\
            --enable-xpm     					\
            --enable-xinerama 					\
            --enable-xft     					\
            --enable-xmb     					\
            --enable-imlib2  					\
            --enable-ewmh    
