mkdir build
cd    build

../configure                               	\
      --build=$LMBX_BUILD		   	\
      --prefix=$PREFIX                     	\
      --with-mpc=/usr/pkgs/mpc		   	\
      --with-isl=/usr/pkgs/isl		   	\
      --with-mpfr=/usr/pkgs/mpfr	 	\
      --with-gmp=/usr/pkgs/gmp		   	\
      --with-lib-path=/usr/pkgs/glibc/lib   	\
      --with-system-zlib		   	\
      --enable-shared                      	\
      --disable-werror                     	\
	sys_lib_search_path_spec="/usr/pkgs/glibc/lib /usr/pkgs/binutils/lib"



