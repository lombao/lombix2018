./configure --prefix=$PREFIX --disable-nls 		\
            --localstatedir=/var   			\
            --with-os-vendor=Lombix 			\
            --with-os-name=Lombix   			\
            --disable-static       			\
	    --enable-libdrm				\
            --enable-glamor 				\
            --enable-install-setuid 			\
	    --enable-Xnest				\
            --enable-suid-wrapper   			\
            --disable-systemd-logind 			\
            --with-default-font-path=$FONTS_PATH 	\
            --with-xkb-path=$PREFIX/share/xkb 		\
            --with-xkb-output=$PREFIX/share/xkb/compiled 

